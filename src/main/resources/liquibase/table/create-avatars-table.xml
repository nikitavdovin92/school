<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-avatars-table.1" author="Nikita Vdovin">
        <preConditions>
            <not>
                <tableExists tableName="faculties"/>
            </not>
        </preConditions>
        <createTable tableName="faculties">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="file_path" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file_size" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="media_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="OID">
                <constraints nullable="false"/>
            </column>
            <column name="student_Id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="avatars" baseColumnNames="student_Id" constraintName="FK_AVATARS_STUDENT_ID"
                                 referencedTableName="students"
                                 referencedColumnNames="id"/>
    </changeSet>




</databaseChangeLog>