<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="add-index-to-faculties.1" author="Nikita Vdovin">
        <preConditions>
            <and>
                <tableExists tableName="faculties"/>
                <not>
                    <indexExists tableName="faculties" indexName="IDX_faculties_name_color"/>
                </not>
            </and>
        </preConditions>
        <createIndex tableName="faculties" indexName="IDX_faculties_name_color">
            <column name="name"/>
            <column name="color"/>
        </createIndex>
    </changeSet>




</databaseChangeLog>